<idea-plugin>
    <id>io.ktor.intellij.plugin</id>

    <name>Ktor</name>
    <description>
        <![CDATA[
            This plugin supports the <a href="https://ktor.io/">Ktor</a> framework.
            The following features are available:
            <ul>
                <li>Ability to create preconfigured Ktor projects.</li>
            </ul>
        ]]>
    </description>
    <version>0.1</version>
    <vendor>JetBrains</vendor>

    <depends>com.intellij.modules.java</depends>
    <depends>org.jetbrains.plugins.gradle</depends>
    <depends>org.jetbrains.idea.maven</depends>
    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <moduleType id="KTOR_MODULE" implementationClass="io.ktor.start.intellij.KtorModuleType"/>
    </extensions>
</idea-plugin>
